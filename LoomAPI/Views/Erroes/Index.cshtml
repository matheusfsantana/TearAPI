@model IEnumerable<LoomAPI.Models.Erro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeParadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoParadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerdaEficienciaParadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoMedio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeParadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoParadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerdaEficienciaParadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoMedio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
